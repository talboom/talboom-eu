---
import Layout from '../layouts/Layout.astro';
import BlogList from '../components/BlogList.astro';
---

<Layout title="Thijs Talboom">
  <!-- Hero Section -->
  <section id="hero" class="px-6 sm:px-12 lg:px-24 py-6 sm:py-8 lg:py-12 bg-gray-100">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row md:items-center gap-8">
        <!-- Profile Image - appears first on mobile -->
        <div class="flex-shrink-0 order-1 md:order-2">
          <img
            src="/images/profile_pic.JPG"
            alt="Thijs Talboom"
            class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 rounded-full object-cover mx-auto md:mx-0"
          />
        </div>

        <!-- Text Content - appears second on mobile -->
        <div class="flex-1 order-2 md:order-1">
          <!-- Name and Title -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Hej, I'm <span class="text-blue-600">Thijs Talboom</span>
          </h1>

          <p class="text-lg sm:text-xl text-gray-600 mb-8">
            Passionate technologist and engineering leader who believes in the power of European tech innovation.
            Spent ten years at Picnic Technologies, witnessing and driving the journey from startup to scale-up.
            Recently relocated to Stockholm and seeking a daring next step that aligns with my values and vision for technology's positive impact.
          </p>

          <p class="text-lg sm:text-xl text-gray-600 mb-8">
            When not building software, I'm an enthusiastic marathon runner with a personal best of 2:29.
            Currently training for upcoming races including Valencia Marathon.
          </p>
        </div>
      </div>

      <!-- Social Links -->
      <div class="social-wrapper">
        <div class="social-links flex flex-wrap gap-4">
          <a
            href="mailto:thijs@talboom.eu"
            class="text-blue-600 hover:text-blue-800 hover:scale-110 transition-colors font-medium"
          >
            Email
          </a>
          <a
            href="https://www.linkedin.com/in/t-talboom/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 hover:scale-110 transition-colors font-medium"
          >
            LinkedIn
          </a>
          <a
            href="https://github.com/talboom"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 hover:scale-110 transition-colors font-medium"
          >
            GitHub
          </a>
          <a
            href="https://www.strava.com/athletes/17288184"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-800 hover:scale-110 transition-colors font-medium"
          >
            Strava
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="px-6 sm:px-12 lg:px-24 py-12">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 inline-block">
        Projects
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="group">
          <h3 class="text-lg font-medium text-gray-900 mb-2">
            <a
              href="https://ookopsignal.eu/"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-600 transition-colors"
            >
              Ook op Signal →
            </a>
          </h3>
          <p class="text-gray-600 text-sm">
            A tool to create profile pictures with 'Ook op Signal' badges,
            making the transition to Signal easier for Dutch users.
          </p>
        </div>

        <div class="group">
          <h3 class="text-lg font-medium text-gray-900 mb-2">
            <a
              href="https://flightwatch.talboom.eu"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-600 transition-colors"
            >
              FlightWatch →
            </a>
          </h3>
          <p class="text-gray-600 text-sm">
            Golf tournament management system for tracking multiple flights
            and viewing live scores across different groups.
          </p>
        </div>
      </div>

      <div class="mb-8"></div>

      <div class="all-projects-btn-wrapper">
        <a
          href="/projects"
          class="inline-block text-blue-600 hover:text-blue-800 transition-colors font-medium"
        >
          All projects →
        </a>
      </div>
    </div>
  </section>

  <!-- Features Posts Section -->
  <section id="features" class="px-6 sm:px-12 lg:px-24 py-12 bg-blue-50">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 inline-block">
        Featured Posts
      </h2>

      <BlogList variant="featured" limit={2} />
    
      <div class="mb-8"></div>

      <div class="all-posts-btn-wrapper">
        <a
          href="/blogs"
          class="inline-block text-blue-600 hover:text-blue-800 transition-colors font-medium"
        >
          All posts →
        </a>
      </div>
    </div>
  </section>
</Layout>