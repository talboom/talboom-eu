---
export interface Props {
  title: string | any;
  subtitle?: string;
  imageSrc?: string;
  list?: string[];
  description?: string;
  link?: { href: string; label: string };
}

const { title, subtitle, imageSrc, list, description, link } = Astro.props;
---

<div class="group mb-8">
  {/* Title with optional link styling */}
  <h3 class="text-lg font-medium text-gray-900 mb-2">
    {link ? (
      <a
        href={link.href}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-blue-600 transition-colors"
      >
        {title} →
      </a>
    ) : (
      <Fragment set:html={title} />
    )}
  </h3>

  {/* Subtitle */}
  {subtitle && (
    <p class="text-gray-600 font-medium text-sm mb-3">{subtitle}</p>
  )}

  {/* Description */}
  {description && (
    <p class="text-gray-600 text-sm mb-4">{description}</p>
  )}

  {/* List items */}
  {list && list.length > 0 && (
    <ul class="space-y-2 text-gray-700 text-sm mb-4">
      {list.map((item) => (
        <li class="flex items-start">
          <span class="text-blue-600 mr-2 mt-1.5 flex-shrink-0">•</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  )}
</div>
